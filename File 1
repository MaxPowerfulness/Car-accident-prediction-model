import geopandas as gpd
import numpy
import pandas as pd
import requests
import seaborn
import sklearn
import skimage
import matplotlib.pyplot as plt
from shapely.geometry import Point


def us_accidents(filename):
    # Create map of US
    fig, axis = plt.subplots(1, figsize=(10, 10))

    states = gpd.read_file(filename)
    states = states[(states['NAME'] != 'Alaska') &
                    (states['NAME'] != 'Hawaii')]
    accidents = pd.read_csv('truncated_csv.csv')

    coordinates = zip(accidents['Start_Lng'], accidents['Start_Lat'])
    accidents['coordinates'] = [Point(-lon, lat) for lon, lat in coordinates]
    accidents = gpd.GeoDataFrame(accidents, geometry='coordinates')
    
    accidents.plot(ax=axis, color='red', markersize=10)
    states.plot(ax=axis)
    plt.savefig('US_Accidents.png', bbox_inches='tight')



def main():
    us_accidents('USMap.json')
    print('yeet')


if __name__ == '__main__':
    main()
